network:
  version: 2
  renderer: networkd
  ethernets:
{% if inventory_hostname == "vm-fw" %}
    enp0s8:
      dhcp4: false
      addresses:
        - 172.16.0.1/24
    enp0s9:
      dhcp4: false
      addresses:
        - 10.10.0.1/24
    enp0s10:
      dhcp4: false
      addresses:
        - 10.0.0.1/24
{% else %}
    enp0s8:
      dhcp4: true
    enp0s9:
      dhcp4: true
    enp0s10:
      dhcp4: true
{% endif %}
    enp0s16:
      dhcp4: true
    enp0s17:
      dhcp4: true
